@model IEnumerable<WebStore.DAL.Products>


@{
    ViewBag.Title = "Products";
}
<h2>Hedinn&John's excellent webstore</h2>



@foreach (var item in Model)
{
<div class="container-fluid">
    <div class="col">
        <div class="col-md-3">
            <div class="productbox">
                <img src="http://lorempixel.com/400/200/" class="img-responsive">
                <div class="producttitle">@Html.DisplayFor(modelItem => item.name)</div>
                <p class="text-justify">@Html.DisplayFor(modelItem => item.description)</p>
                <div class="productprice">
                    <div class="pull-right">
                        <a href="#" class="btn btn-success btm-sm" role="button">Price @Html.DisplayFor(modelItem => item.price)<span class="glyphicon glyphicon-usd"></span></a>
                    </div>
                    <div class="pricetext">             
                            <a href="@Url.Action("Edit", "Products", new { id = item.ID } )" class="btn btn-warning">
                               Edit
                                <span class="glyphicon glyphicon-cog"></span>
                            </a>
                    </div>
                </div>
            </div>     
        </div>
        </div>
    </div>
}